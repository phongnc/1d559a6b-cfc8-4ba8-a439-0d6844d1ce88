@model IEnumerable<SSISApplication.Generator.Models.Templates_tb>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by title: @Html.TextBox("SearchParam", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Template_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Template_Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Template_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Template_Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Template_Name }) |
            @Html.ActionLink("Details", "Details", new { id=item.Template_Name }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Template_Name })
        </td>
    </tr>
}

</table>
